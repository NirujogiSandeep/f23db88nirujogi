extends layout

block content
  h1= title
  - let items = results;
  
   div.container-fluid 
    div.row
     each sea,index in items 
      div.col-sm-2(onclick=`buy(${index})`) #{sea.name}
      div.col-sm-2(onclick=`buy(${index})`) #{sea.sizeinkm}
      div.col-sm-2(onclick=`buy(${index})`) #{sea.location}
      br
      hr

  script. 
       function buy(index)
       {
        alert(`you purchased Item: ${index+1}`)
       }
